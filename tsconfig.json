{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "types": ["jest", "node"]
  },
  "references": [
    {
      "path": "packages/@guidesmiths/cuckoojs-schematics"
    },
    {
      "path": "packages/@guidesmiths/cuckoojs-cli"
    }
  ],
  "exclude": ["node_modules", "dist"]
}
